<%= form_with(model: @link) do |form| %>
  <% if @link.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
        <% @link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block", class: "custom-label" %>
    <%= form.text_field :title, class: "custom-input" %>
  </div>

  <br>
  
  <div>
    <%= form.label :url, style: "display: block", class: "custom-label" %>
    <%= form.text_field :url, class: "custom-input" %>
  </div>
  <br>
  <div>
    <%= form.submit "Save Link", class: "btm btn-primary"%>
  </div>
<% end %>