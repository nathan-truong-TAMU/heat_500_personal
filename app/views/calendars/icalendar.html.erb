<ul>
  <%= month_calendar() do |date| %>
    <%= date%>
    <% @eventdates.each_index do |i| %>
      <div>
        <%if @eventdates[i] == date.to_s()%>
            <%= @events[i].summary %>
        <%end%>
      </div>
    <% end %>
  <% end %>
</ul>

<style>
.simple-calendar {
    border: 1px solid #ccc;
    border-radius: 8px;
    margin: 15px;
    overflow: hidden;
    font-family: Arial, sans-serif;
    background-color: #8a6240;
}

.day {
    align-items: center;
    justify-content: center;
    position: relative; /* For absolute positioning of events */
    transition: background-color 0.2s;
}

.wday-0 { background-color: #f9f9f9; } /* Sunday */
.wday-1 { background-color: #ffffff; } /* Monday */
.wday-2 { background-color: #ffffff; } /* Tuesday */
.wday-3 { background-color: #ffffff; } /* Wednesday */
.wday-4 { background-color: #ffffff; } /* Thursday */
.wday-5 { background-color: #ffffff; } /* Friday */
.wday-6 { background-color: #f9f9f9; } /* Saturday */

.today {
    background-color: #CABA9C; /* Today's date */
    color: #102820;
}

.past {
    background-color: #102820;  /* Past dates */
    color: #CABA9C;
}

.future {
    background-color: #4C6444; /* Future dates */
    color: #CABA9C;
}

.start-date {
}

.prev-month {
    opacity: 0.8
}

.next-month {
    opacity: 0.8
}

.current-month {
    font-weight: bold; /* Bold text for current month days */
}

.has-events {
    background-color: #93A889; /* Highlight days with events */
    color: #1f2f22;
}

.has-events::after {
}
</style>