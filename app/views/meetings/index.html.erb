<%= link_to 'Back', root_path, class: "button back-button" %>

<h1 class="page-title">Meetings</h1>

<div id="meetings" class="meetings-container">
  <% @meetings.each do |meeting| %>
    <div class="meeting-item">
      <%= render meeting %>
      <p class="show-meeting-link">
        <%= link_to "Show this meeting", meeting, class: "button show-button" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New meeting", new_meeting_path, class: "button new-meeting-button" %>
<br><br>
<%= link_to member_view_meetings_path, class: "button button-member-view" do %>
  Member View
<% end %>

