<div class="meeting-container">
  <%= render @meeting %>
</div>

<div class="meeting-actions">
  <%= link_to "Edit this meeting", edit_meeting_path(@meeting), class: "edit-link" %>
  |
  <%= link_to "Back to meetings", meetings_path, class: "back-link" %>

  <%= button_to "Delete this meeting", @meeting, method: :delete, class: "delete-button" %>
</div>

<style>
  body {
    background-color: #f2f2f2;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    color: #4a4a4a;
    margin: 0;
    padding: 20px;
  }

  .meeting-container {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin: 30px auto;
    max-width: 600px;
  }

  .meeting-actions {
    text-align: center;
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #eaeaea;
  }

  .meeting-actions a, .meeting-actions form button {
    display: inline-block;
    text-decoration: none;
    padding: 10px 15px;
    margin: 5px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    border: 1px solid transparent;
  }

  .meeting-actions a {
    color: #007bff;
    background-color: transparent;
  }

  .meeting-actions a:hover, .meeting-actions form button:hover {
    background-color: #e9e9e9;
  }

  .meeting-actions form button {
    background-color: #dc3545;
    color: white;
    border-color: #dc3545;
  }

  .meeting-actions form button:hover {
    background-color: #c82333;
    border-color: #bd2130;
  }
</style>