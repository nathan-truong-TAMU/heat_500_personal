<div id="<%= dom_id(event) %>" class="event-card">
  <p>
    <strong>Event Link:</strong>
    <%= link_to event.link, event.link %>
  </p>

  <p>
    <strong>Event Name:</strong>
    <%= event.name %>
  </p>

  <p>
    <strong>Event Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Event Deadline:</strong>
    <% if event.end_date.present? %>
      <%= event.end_date.strftime("%A, %d %B %Y at %I:%M %p") %>
    <% else %>
      <em>No deadline available</em>
    <% end %>
  </p>

  <p>
    <strong>Event Start:</strong>
    <% if event.start_date.present? %>
      <%= event.start_date.strftime("%A, %d %B %Y at %I:%M %p") %>
    <% else %>
      <em>No start date available</em>
    <% end %>
  </p>

  <p>
    <strong>Event Points:</strong>
    <%= event.points %>
  </p>
</div>

  <style>
  body {
    background-color: #f2f2f2;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    margin: 0;
    padding: 20px;
  }

  .event-card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    max-width: 600px;
    margin: 30px auto;
  }

  .event-card p {
    color: #333;
    line-height: 1.6;
    font-size: 16px;
    margin-bottom: 15px;
  }

  .event-card strong {
    display: inline-block;
    min-width: 150px;
    color: #555;
    font-weight: bold;
  }

  .event-card a {
    color: #007bff;
    text-decoration: none;
  }

  .event-card a:hover {
    text-decoration: underline;
  }
</style>