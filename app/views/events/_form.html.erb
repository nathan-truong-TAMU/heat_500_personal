<div class="form-container">
  <%= form_with(model: event, html: { class: 'event-form' }) do |form| %>
    <% if event.errors.any? %>
      <div>
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, "Event Name", class: 'custom-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: "Enter name of event" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Event Description", class: 'custom-label' %>
      <%= form.text_area :description, class: 'form-control', placeholder: "Enter description of event" %>
    </div>

    <div class="form-group">
      <%= form.label :start_date, "Event Start", class: 'custom-label' %>
      <%= form.datetime_field :start_date, class: 'form-control', placeholder: "Enter start date/time of event" %>
    </div>

    <div class="form-group">
      <%= form.label :end_date, "Event Deadline", class: 'custom-label' %>
      <%= form.datetime_field :end_date, class: 'form-control', placeholder: "Enter deadline date/time of event" %>
    </div>

    <div class="form-group">
      <%= form.label :location, "Event Location", class: 'custom-label' %>
      <%= form.text_field :location, class: 'form-control', placeholder: "Enter the location of the event" %>
    </div>

    <!-- Points have a hard limit of 999,999,999 -->
    <div class="form-field">
      <%= form.label :points, class: 'custom-label' %>
      <%= form.text_field :points, class: 'form-control', maxlength: 9, oninput: "this.value=this.value.replace(/[^0-9]/g,'');" %>
    </div>
    <br>
    <div class="form-group">
      <%= form.submit class: 'btm btn-primary' %>
    </div>
  <% end %>
</div>

