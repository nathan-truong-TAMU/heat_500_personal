<p class="notice"><%= notice %></p>

<div class="member-details">
  <%= render @member %>
</div>

<div class="action-links">
  <%= link_to "Edit this member", edit_member_path(@member) %> |
  <%= link_to "Back to members", members_path %>
  <%= button_to "Destroy this member", @member, method: :delete, data: { turbo_confirm: "Are you sure?" }, form_class: "action-link", class: "danger-link" %>
</div>


<div class="events-attended">
  <h3>Events Attended</h3>
  <% if @member.events.any? %>
    <ul>
      <% @member.events.each do |event| %>
        <li><%= event.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>This member has not attended any events yet.</p>
  <% end %>
</div>

