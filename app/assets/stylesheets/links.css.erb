@import url("https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css");

body {
  background-color: #FFF8E7 !important; /* Creamy as background color */
  color: #CABA9C; /* Dark Green for text */
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  margin: 0;
}


#about-organization {
  background-color: #4C6444; 
  padding: 30px; 
  border-radius: 8px; 
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); 
  max-width: 800px; 
  margin: 20px auto;
}

#links {
  max-width: 600px !important;
  margin: 0 auto !important;
  text-align: left !important; /* Align text to the left for a cleaner look */
}

#links a {
  color: black !important; /* Set link text color to black */
  text-decoration: none !important; /* Remove underline from links */
  font-weight: bold !important; /* Optional: if you want bold text */
}

#links a:hover {
  color: black !important; /* Keep it black on hover to prevent color change */
  text-decoration: none !important; /* Ensure underline doesn't appear on hover */
}

#links .link-item {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important; /* Centers text horizontally */
  background-color: #CABA9C !important; /* Khaki for the button */
  color: black !important; /* Text color */
  font-family: 'Arial', sans-serif !important;
  font-size: 18px !important;
  font-weight: bold !important;
  padding: 15px 20px !important;
  margin: 10px 0 !important;
  border-radius: 8px !important;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2) !important; /* Shadow for depth */
  transition: background-color 0.3s ease, transform 0.3s ease !important;
  position: relative !important;
  text-align: center !important;
}

#links .link-item:hover {
  background-color: #355E3B !important; /* Darker olive green on hover */
  transform: scale(1.03) !important; /* Slight scaling effect on hover */
}

.edit-circle {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  width: 30px !important;
  height: 30px !important;
  background-color: #DC143C !important; /* Crimson red */
  color: #FFF !important;
  font-size: 12px !important;
  font-weight: bold !important;
  border-radius: 50% !important; /* Circular shape */
  text-decoration: none !important;
  position: absolute !important;
  top: 50% !important; /* Center vertically */
  transform: translateY(-50%) !important; /* Center based on height */
  right: -45px !important; /* Adjust positioning to place it outside the container */
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2) !important; /* Shadow for depth */
  transition: background-color 0.3s ease, transform 0.3s ease !important;
  transform-origin: center !important; /* Ensure scaling is centered */
}

.edit-circle:hover {
  background-color: #B22222 !important; /* Darker red on hover */
  transform: scale(1.1) translateY(-10px)!important;
  transform-origin: center !important;
}



