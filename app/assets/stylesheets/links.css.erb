}

/* Style for "Back to links" */
.back-link {
  color: #ffffff;
  background-color: #6B8E23; /* Olive green */
  padding: 8px 16px;
  border-radius: 8px;
  text-decoration: none;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease, transform 0.3s ease;
  margin-top: 20px; /* Add space above the button */
}

.back-link:hover {
  background-color: #556B2F; /* Darker olive */
  transform: scale(1.05);
}

/* Style for "Destroy this link" */
.destroy-button {
  color: #ffffff;
  background-color: #DC143C; /* Crimson red */
  padding: 8px 16px;
  border-radius: 8px;
  border: none;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease, transform 0.3s ease;
  cursor: pointer;
  margin-right: 10px;
  margin-top: 20px; /* Add space above the button */
}

.destroy-button:hover {
  background-color: #8B0000; /* Dark red */
  transform: scale(1.05);
}

.destroy-button:active {
  background-color: #FF4500; /* Red-orange on click */
  transform: scale(0.95); /*test comment*/
}


